html
    head
        style
            include ../css/registerForm.css
    body
        div
            h1 Login Form
                if (have_error)
                    h2(style='color:red') #{error_message}
            form(name='login' action='' method='post')
                p
                    b #{login}
                    br
                    input(name='login' type='text' placeholder=placeholderLogin required)
                p
                    b #{password}
                    br
                    input(name='password' type='password' placeholder=placeholderPassword required)
                p
                    input(name='remember' type='checkbox')
                    a #{remember}
                    br
                p
                    input(type='submit' value=log_in)
                p
                    input(type='reset' value=resetMessage)