// Register Form
html
    head
        title #{title}
        style
            include ../css/registerForm.css
        script(src="/api/js?file=rsa.js")
        script(src="/api/js?file=base.js")
        script.
          Base.reset(["login", "password", "firstName", "secondName", "man"], ["woman"]);
          Base.createSendFunction("/postjoin", {
            login: {},
            password: {
              check: function (value, callback) {
                Base.encrypt(value, callback);
              }
            },
            firstName: {},
            secondName: {},
            man: {
              key: "sex",
              check: function (value, callback) {
                callback(undefined, value ? "man" : "woman");
              }
            }
          });
    body
        div(id="loading" hidden)
            h1 #{loading}
        div(id="main")
            h1 #{registerForm}
            h2.error(id = "error" hidden)
            p
                b #{login}
                br
                input(id = "login" name='login' type='text' placeholder=placeholderLogin required)
            p
                b #{password}
                br
                input(id = "password" name='password' type='text' placeholder=placeholderPassword required)
            p
                b #{firstName}
                br
                input(id = "firstName" name='firstName' type='text' placeholder=placeholderFirstName required)
            p
                b #{secondName}
                br
                input(id = "secondName" name='secondName' type='text' placeholder=placeholderSecondName required)
            p
                b #{sexText}
                br
                input.radio(id = "man" name='sex' type='radio' value='man' checked)
                a #{man}
                br
                input.radio(id = "woman" name='sex' type='radio' value='woman')
                a #{woman}
                br
            p
                input(type="button" onclick="send()" value=sendMessage)
            p
                input(type="button" onclick="reset()" value=resetMessage)