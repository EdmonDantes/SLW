// Register Form
html
    head
        style
            include ../css/registerForm.css
        script(src="/api/js?file=rsa.js")
        script(src="/api/js?file=base.js")
        script(src="/api/js?file=registerSend.js")
        script.
          Base.reset(["login", "password", "fName", "sName", "man"], ["woman"]);
          createSend({
            login: "#{wrongLogin}",
            password: "#{wrongPassword}",
            firstName: "#{fName}",
            secondName: "#{sName}"
          });
    body
        div(id="load" hidden)
            h1 #{loading}
        div(id = "registration")
            h1 #{registerForm}
            h2(id = "error" style='color:red' hidden="false") #{error_message}
            p
                b #{login}
                br
                input(id = "login" name='login' type='text' placeholder=placeholderLogin required)
            p
                b #{password}
                br
                input(id = "password" name='password' type='text' placeholder=placeholderPassword required)
            p
                b #{firstName}
                br
                input(id = "fName" name='firstName' type='text' placeholder=placeholderFirstName required)
            p
                b #{secondName}
                br
                input(id = "sName" name='secondName' type='text' placeholder=placeholderSecondName required)
            p
                b #{sexText}
                br
                input.radio(id = "man" name='sex' type='radio' value='man' checked)
                a #{man}
                br
                input.radio(id = "woman" name='sex' type='radio' value='woman')
                a #{woman}
                br
            p
                input(type="button" onclick="send()" value=sendMessage)
            p
                input(type="button" onclick="reset()" value=resetMessage)